<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef>
    <defName>RotR_ISR2GNew</defName>
    <label>ISR2G</label>
    <thingClass>ThingWithComps</thingClass>
    <description>In Situ Road Ressource Gatherer. Uses local resources when building roads, completely eliminating the need to bring wood and stone at the cost of 4 times the work.</description>
    <graphicData>
      <texPath>Buildings/ISR2G</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <category>Item</category>
    <thingCategories>
      <li>RoadEquipment</li>
    </thingCategories>
    <drawGUIOverlay>true</drawGUIOverlay>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>true</alwaysHaulable>
    <tickerType>Never</tickerType>
    <useHitPoints>true</useHitPoints>
    <pathCost>10</pathCost>
    <selectable>true</selectable>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>8000</WorkToMake>
      <Mass>50</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>-20</Beauty>
    </statBases>
    <techLevel>Industrial</techLevel>
    <costList>
      <Steel>120</Steel>
      <ComponentIndustrial>10</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
      <researchPrerequisite>ResearchProject_RotRISR2G</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
